{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["api/**"]
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/contents/(?<id>[^/]+)",
      "dest": "api/contents/[id].ts?id=$id"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/$1.ts"
    }
  ]
}
